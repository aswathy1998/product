<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bgstyle"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="PRODUCT MODEL"/>
        <EditText
            android:layout_margin="15dp"
            android:id="@+id/pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="PRODUCT CODE"/>
        <EditText
            android:layout_margin="15dp"
            android:id="@+id/pc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="PRODUCT NAME"/>
        <EditText
            android:layout_margin="15dp"
            android:id="@+id/pn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/typelist"></Spinner>

        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="PRODUCT SELLER NAME"/>
        <EditText
            android:layout_margin="15dp"
            android:id="@+id/psn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRAND"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/brandlist"></Spinner>
        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="PRICE"/>
        <EditText
            android:layout_margin="15dp"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TYPE"/>

        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="OWNER NAME"/>
        <EditText
            android:layout_margin="15dp"
            android:id="@+id/own"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="OWNER MOBILE NUMBER"/>
        <EditText
            android:layout_margin="15dp"
            android:id="@+id/mobno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonstyle"
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"/>
        <Button
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/srch"
            android:text="SEARCH"/>

    </LinearLayout>

</ScrollView>